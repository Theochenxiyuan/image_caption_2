<%- include("partials/header", { title: "Image Gallery" }) %>

    <h2>Uploaded Images</h2>

    <% if (typeof error !=="undefined" && error) { %>
        <p style="color: red;">
            <%= error %>
        </p>
        <% } else if (images && images.length> 0) { %>
            <div class="gallery">
                <% images.forEach(image=> { %>
                    <div class="image-container" style="display: flex; align-items: center; margin-bottom: 20px;">
                        <img src="<%= image.thumbnailUrl %>" alt="Thumbnail"
                            style="max-width: 200px; border-radius: 5px; margin-right: 20px;" />
                        <div>
                            <p><strong>Caption:</strong>
                                <%= image.caption %>
                            </p>
                            <p><a href="<%= image.originalUrl %>" target="_blank">View Full Image</a></p>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <p>No images uploaded yet.</p>
                <% } %>

                    <br />
                    <a href="/">Upload More Images</a>

                    <%- include("partials/footer") %>